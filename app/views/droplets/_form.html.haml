= form_for @droplet do |f|
  - if @droplet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@droplet.errors.count, "error")} prohibited this droplet from being saved:"
      %ul
        - @droplet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :drink
    = f.number_field :drink
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
