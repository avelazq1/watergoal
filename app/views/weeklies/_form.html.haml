= form_for @weekly do |f|
  - if @weekly.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weekly.errors.count, "error")} prohibited this weekly from being saved:"
      %ul
        - @weekly.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :day
    = f.text_field :day
  .field
    = f.label :string
    = f.text_field :string
  .field
    = f.label :droplets
    = f.text_field :droplets
  .field
    = f.label :integer
    = f.text_field :integer
  .actions
    = f.submit 'Save'
